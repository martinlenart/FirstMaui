<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstMaui.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Maui Demo Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />

    <ShellContent
        Title="Weather forecast Stockholm"
        ContentTemplate="{DataTemplate local:ForecastPage}"
        Route="ForecastPage" />
    
    <ShellContent
        Title="Business news headlines"
        ContentTemplate="{DataTemplate local:NewsPage}"
        Route="NewsPage" />


</Shell>
